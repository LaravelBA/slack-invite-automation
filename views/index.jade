doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Unite a #{community}!
    link(href="css/style.css", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Lato:300,400,700,900,700italic|Open+Sans:700italic,400,600,300,700,800", rel="stylesheet", type="text/css")
  body
    #wrapper
      .main
        .header
          h1
            strong #{community}
          h2 Ingres√° tu mail para unirte al slack de #{community}!
        .content
          .information
            form(method="POST", action="/invite")#join-form.form
              input(type="text", name="email", placeholder="un mail")#slack-email.field
              input(type="submit", value="Unite").submit
    script.
      var form = document.getElementById('join-form');
      var email = document.getElementById('slack-email')
      form.addEventListener('submit', function(evt) {
        if (!email.value) {
          evt.preventDefault();
        }
      });
